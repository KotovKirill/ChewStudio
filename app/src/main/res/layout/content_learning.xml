<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/content_settings_button_learning"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="?attr/colorPrimary"
                    android:paddingLeft="20dp"
                    android:textStyle="bold" />
               <CheckBox
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/content_main_checkbox_learning"
                   android:id="@+id/content_settings_checkbox_learning_mode" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/content_settings_text_count"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    style="@android:style/TextAppearance.Holo.Small" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/relativeLayout">

                    <TextView
                        android:id="@+id/startText"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="?attr/colorAccent"
                        android:text="0"/>

                    <SeekBar
                        android:id="@+id/seekBar_count"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/endText"
                        android:layout_toRightOf="@+id/startText"
                        android:max="100"/>

                    <TextView
                        android:id="@+id/endText"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:layout_alignWithParentIfMissing="true"
                        android:maxLines="1"
                        android:textColor="?attr/colorAccent" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>